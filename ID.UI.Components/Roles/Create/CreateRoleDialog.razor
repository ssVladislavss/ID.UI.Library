@inherits CreateRoleComponent

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            Форма добавления роли
        </MudText>
    </TitleContent>

    <DialogContent>
        <ServerLoading Show="OverlayEnabled" />
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudForm @ref="ModelForm" Model="Model">
                <MudTextField @bind-Value="@Model.RoleName"
                              Label="Наименование"
                              AutoFocus="true"
                              Immediate="true"
                              For="() => Model.RoleName"
                              Validation="Model.Validator.IsValid"
                              T="string"
                              InputMode="InputMode.text" />
            </MudForm>
        </MudContainer>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" Disabled="!ModelForm.IsValid" Variant="Variant.Filled" OnClick="CreateRoleAsync">Создать</MudButton>
    </DialogActions>
</MudDialog>