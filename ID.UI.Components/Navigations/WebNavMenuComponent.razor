@inherits WebNavMenuComponentModel

<MudNavMenu Color="Color.Primary">
    <MudStack Row="true">
        <MudText Typo="Typo.h6" Class="px-4">ID</MudText>
        <MudText Typo="Typo.body1" Class="mt-1"><b>панель управления</b></MudText>
    </MudStack>
    <AuthorizeView>
        <MudText Typo="Typo.body2" Class="px-4">Добро пожаловать</MudText>
        <MudText Typo="Typo.body2" Class="px-4">@context.User.FindFirst("email")?.Value</MudText>
    </AuthorizeView>
    <MudDivider Class="my-2" />
    @if(OverridedMenu != null)
    {
        @OverridedMenu
    }
    else
    {
        <MudNavLink Href="@MainPath" Icon="@Icons.Material.Filled.Dashboard" Match="NavLinkMatch.All">Главная</MudNavLink>

        <MudNavGroup Title="Сервер идентификации" Expanded="false">
            <MudNavLink Href="@ClientsPath" Icon="@Icons.Material.Filled.SettingsApplications" Match="NavLinkMatch.Prefix">Приложения</MudNavLink>
            <MudNavLink Href="@ApiResourcesPath" Icon="@Icons.Material.Filled.SettingsBackupRestore" Match="NavLinkMatch.Prefix">Ресурсы приложений</MudNavLink>
            <MudNavLink Href="@ApiScopesPath" Icon="@Icons.Material.Filled.Scoreboard" Match="NavLinkMatch.Prefix">Области доступа приложений</MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="Управление пользователями" Expanded="false">
            <MudNavLink Href="@RolesPath" Icon="@Icons.Material.Filled.AppBlocking" Match="NavLinkMatch.Prefix">Роли</MudNavLink>
            <MudNavLink Href="@UsersPath" Icon="@Icons.Material.Filled.PersonOutline" Match="NavLinkMatch.Prefix">Пользователи</MudNavLink>
        </MudNavGroup>
    }
    
</MudNavMenu>
